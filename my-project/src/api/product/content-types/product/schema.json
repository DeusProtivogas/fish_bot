{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Description": {
      "type": "string"
    },
    "Picture": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "Price": {
      "type": "decimal"
    },
    "product_quantities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-quantity.product-quantity",
      "mappedBy": "product"
    }
  }
}
